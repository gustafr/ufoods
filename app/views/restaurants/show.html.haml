- if @cart
  Cart:
  = @cart.shopping_cart_items.count
  (
  = link_to "Show cart" , cart_path(@cart)
  )

%p= @restaurant.name
%p= @restaurant.address
%p= @restaurant.description
- @menus.each do |menu|
  %p= menu.name
- @dishes.each do |dish|
  %p
    Dish:
    = dish.name
  %p
    Description:
    = dish.description
  %p
    Category:
    = dish.category
  %p
    Restaurant:
    = dish.restaurant
  %p
    Price:
    = dish.price
    $
  %img{alt: dish.name, src: dish.pic_url}/

  = link_to "Add #{dish.name} to cart" , add_to_cart_path(dish, restaurant_id: @restaurant.id)
